<section id="contact" class="fade-in py-5">
    <div class="container">
        <h2 class="text-center mb-5">Contact Us</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-container">
                    <form id="contact-form" action="https://formspree.io/f/xpzgrowk" method="POST" class="contact-form">
                        <div class="form-group mb-3">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="message">Message:</label>
                            <textarea id="message" name="message" class="form-control" required></textarea>
                        </div>
                        <!-- Form status messages -->
                        <div id="form-status" class="mb-3" style="display: none;">
                            <div id="form-success" class="alert alert-success" style="display: none;">
                                Thanks for your message! We'll get back to you soon.
                            </div>
                            <div id="form-error" class="alert alert-danger" style="display: none;">
                                Oops! There was a problem sending your message. Please try again.
                            </div>
                        </div>
                        <button type="submit" class="cta-button">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

